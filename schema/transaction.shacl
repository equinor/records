@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix rec: <https://rdf.equinor.com/ontology/record/>.
@prefix rev: <https://rdf.equinor.com/ontology/revision/>.
@prefix tra: <https://rdf.equinor.com/ontology/transaction/>.
@prefix rdfs: 	<http://www.w3.org/2000/01/rdf-schema#>.
@prefix lis: <http://standards.iso.org/iso/15926/part14/>.
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix prov: <http://www.w3.org/ns/prov#> .

rev:TransactionShape
    a sh:NodeShape ;
    rdf:comment "This shape is for a transaction of records." ;
    sh:targetClass tra:Transaction ;
    sh:property [
        sh:path prov:generatedAtTime;
        sh:minCount 1;
        sh:maxCount 1;
        sh:name "RevisionDate";
        sh:message "A transaction has exactly one date when it is received";
    ] ,
    [
        sh:path prov:wasGeneratedBy;
        sh:minCount 1;
        sh:maxCountr 1;
        sh:name "Transaction sender";
        sh:message "A transaction has exactly one sender, related to with prov:wasGeneratedBy";
    ] .